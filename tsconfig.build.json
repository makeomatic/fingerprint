{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "composite": true
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules/**",
        "lib",
        "dist",
        "**.test.ts",
        "**.spec.ts"
    ]
}